<Page x:Class="WpfApplication1.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="350" d:DesignWidth="350"
      Title="Home">

    <Grid>
        <materialDesign:PackIcon Kind="AccountCircle" Width="250" Height="250" Margin="0 0 0 130" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFC1C1C1"/>
        
        <TextBox 
            x:Name="tbUserName" 
            materialDesign:HintAssist.Hint="Enter your name"
            TextAlignment="Center"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Margin="0 170 0 0" 
            FontSize="24"/>
        
    </Grid>
</Page>
